{
  "name": "rs-fmt-check",
  "version": "3.0.0",
  "private": false,
  "description": "Run rustfmt and annotate the diff with suggested changes",
  "main": "dist/index.js",
  "scripts": {
    "all": "npm run build && npm run test",
    "build": "ncc build src/main.ts --minify",
    "format": "prettier --write 'src/**/*.ts'",
    "watch": "ncc build src/main.ts --watch --minify",
    "test": "jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clechasseur/rs-fmt-check.git"
  },
  "keywords": [
    "actions",
    "rust",
    "cargo",
    "rustfmt"
  ],
  "author": "clechasseur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clechasseur/rs-fmt-check/issues"
  },
  "dependencies": {
    "@clechasseur/rs-actions-core": "^6.0.0",
    "string-argv": "^0.3.2"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@vercel/ncc": "^0.38.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
